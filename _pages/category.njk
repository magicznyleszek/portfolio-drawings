---
{
  "layout": "layouts/base.njk",
  "pagination": {
    "data": "collections.imagesByCategory",
    "size": 1,
    "alias": "category"
  },
  "permalink": "/{{ category.slug }}/index.html"
}
---
{%- from "system/component.njk" import component -%}

<header>
  {{ component('breadcrumbs', {
    category: category
  }) }}

  <h1>
    {{ category.title }}
  </h1>
</header>

{% if category.description %}
<p>{{ category.description }}</p>
{% endif %}

{{ component('imageList', {
  images: category.images,
  size: 'medium'
}) }}
