---
{
  "layout": "layouts/base.njk",
  "pagination": {
    "data": "collections.images",
    "size": 1,
    "alias": "image"
  },
  "permalink": "{{ image.url }}"
}
---
{%- from "system/component.njk" import component -%}

{{ component('breadcrumbs', {
  category: image.category,
  image: image
}) }}

<article>
  {% if image.description %}
  <p>{{ image.description }}</p>
  {% endif %}

  <a title="{{ image.title }}" href="/{{ image.file }}">
    <img src="/{{ image.large }}" alt="{{ image.slug }}">
  </a>
</article>
